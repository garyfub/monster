<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	
	<display-name>monster-web</display-name>
	
	<!--以下配置的加载顺序:先 ServletContext >> context-param >> listener >> filter >> servlet--> 
	
	<!--全局范围内环境参数初始化，一般用于加载spring的配置文件到上下文中等-->  
	<context-param>
		<description>spring配置</description>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring-mybatis.xml,classpath:spring.xml,classpath:spring-mvc.xml</param-value>
	</context-param>

	<!--spring监听器   从spring.xml中加载Bean--> 
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- servlet分发器 -->
	<servlet>     
        <servlet-name>SpringMVC</servlet-name> 
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>  
    <servlet-mapping>
        <servlet-name>SpringMVC</servlet-name>  
		<!--下面的/    不要写成/* -->
        <url-pattern>/</url-pattern>       
    </servlet-mapping>  
    
    <!-- session失效时间,单位为分钟 -->
    <session-config>
    	<session-timeout>30</session-timeout>
    </session-config> 
    
    <!-- 字符集编码过滤器 -->
    <filter>  
    	<filter-name>CharsetEncodingFilter</filter-name>  
   		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>  
   		<init-param>  
        	<param-name>encoding</param-name>  
        	<param-value>UTF-8</param-value>  
    	</init-param>  
    	<init-param>  
        	<param-name>forceEncoding</param-name>  
        	<param-value>true</param-value>  
    	</init-param>  
	</filter>  
	<filter-mapping>  
	    <filter-name>CharsetEncodingFilter</filter-name>  
	    <url-pattern>/*</url-pattern>  
	</filter-mapping> 
   
   
       <!-- durid数据库监控    详细看下官方文档-->
    <servlet>  
        <servlet-name>DruidStatView</servlet-name>  
        <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>  
    </servlet>  
	<servlet-mapping>  
        <servlet-name>DruidStatView</servlet-name>  
        <url-pattern>/druid/*</url-pattern>  
    </servlet-mapping> 
   
    <!--定义首页列单.-->
    <welcome-file-list>  
        <welcome-file>/index.jsp</welcome-file> 
    </welcome-file-list>  
	
	
</web-app>
